{
  "kind": "PersistentVolume",
  "apiVersion": "v1",
  "metadata": {
    "name": "jenkins"
  },
  "spec": {
    "capacity": {
      "storage": "40Gi"
    },
    "accessModes": [
      "ReadWriteOnce"
    ],
    "persistentVolumeReclaimPolicy": "Recycle",
    "hostPath": {
      "path": "/tmp/digger/jenkins"
    }
  }
}
