 {
  "kind": "PersistentVolume",
  "apiVersion": "v1",
  "metadata": {
    "name": "android-sdk-pv1"
  },
  "spec": {
    "capacity": {
      "storage": "10Gi"
    },
    "accessModes": [
      "ReadWriteOnce"
    ],
    "persistentVolumeReclaimPolicy": "Recycle",
    "nfs": {
      "path": "/tmp/digger/android-sdk-linux",
      "server": "0.0.0.0"
    }
  }
}